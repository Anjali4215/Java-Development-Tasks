import java.util.Scanner;
public class temperatureConvertor{
public static void main(String args[]){
    // Create Scanner object to read user input
    Scanner scanner = new Scanner(System.in);
    System.out.println("Temperature Converter :");
    // Ask user to enter the temperature value
    System.out.println("Enter a temperature value :");
    double temp = scanner.nextDouble();
    System.out.println("unit of measurement (c for celsius ,f for fahrenheit) ");
    // Ask user to enter the unit of measurement value
    char unit = scanner.next().charAt(0);
    if(unit == 'C' || unit == 'c'){
        // Convert Celsius to Fahrenheit
        double fahrenheit = (temp * 9/5)+32;
        System.out.println(temp+" degree celsius to Fahrenheit:"+fahrenheit);
    }else if (unit =='F' || unit == 'f'){
        // Convert Fahrenheit to Celsius
        double celsius = (temp - 32)* 5/9;
        System.out.println(temp+" degree Fahrenheit to Celsius:"+celsius);
    }else{
         // Handle invalid input
        System.out.println("Invalid unit! Please enter C or F.");
    }
    // Close the scanner to prevent resource leak
    scanner.close();
}
}
